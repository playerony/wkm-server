{
  "name": "wkm-server",
  "version": "0.0.0",
  "description": "wkm-server",
  "author": "Paweł Wojtasiński",
  "license": "ISC",
  "scripts": {
    "build": "tsc",
    "lint:fix": "npm run lint -- --fix",
    "format": "prettier --write \"**/*\"",
    "typecheck": "tsc --noEmit -p . --pretty",
    "test": "jest --forceExit --detectOpenHandles",
    "dev": "cross-env NODE_ENV=development npx nodemon",
    "reinstall-deps": "bash ./scripts/reinstall-deps.sh",
    "start": "npm run build && cross-env NODE_ENV=production node build/server.js",
    "lint": "eslint --ignore-path .gitignore --ext .ts src/ && echo 'lint success'"
  },
  "lint-staged": {
    "**/*.{js,ts,md}": [
      "eslint --fix",
      "git add"
    ],
    "**/*.{json}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^7.0.0",
    "express": "^4.17.1",
    "helmet": "^4.4.1",
    "jest": "^26.6.3",
    "jsonwebtoken": "^8.5.1",
    "nodemailer": "^6.5.0",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.21",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/node": "^14.14.35",
    "@types/nodemailer": "^6.4.1",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.18.0",
    "@typescript-eslint/parser": "^4.18.0",
    "cross-env": "^7.0.3",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.1.3",
    "lint-staged": "^10.5.4",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3"
  }
}
